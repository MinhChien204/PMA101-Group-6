<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:background="#D7CFE4"
        android:layout_marginBottom="20dp"
        android:gravity="start|center_vertical"

        >
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Toán"
            android:layout_toRightOf="@id/btn_back"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            />
    </RelativeLayout>
    <!--    <ImageView-->
    <!--        android:id="@+id/img"-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="200dp"-->
    <!--        />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/khung"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/anhSp"
            android:layout_width="84dp"
            android:layout_height="match_parent"

            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/TenspTT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tên sản phẩm:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/GiaTT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="giá:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/SoluongTT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="số lượng :"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin khách hàng"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/khung"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/AnhKhTT"
            android:layout_width="84dp"
            android:layout_height="match_parent"

            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/TenkhTT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tên khách hàng:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/MakhTT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mã khách hàng"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/SđtTT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Số điện thoại:"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/DiaChiTT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Địa chỉ:"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phương thức thanh toán"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/khung"
        android:orientation="horizontal"

        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thanh toán qua ví điện tử"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/baseline_album_24"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thanh toán khi nhận hàng"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/baseline_album_24"
                />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/GiaTienTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá tiền: $"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="240dp"
        />
    <Button
        android:id="@+id/btnThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Thanh toán"/>

</LinearLayout>