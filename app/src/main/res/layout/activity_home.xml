<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!--menu -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:contentDescription="@string/menu" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/img_24"
            android:contentDescription="@string/logo" />

        <!-- Giỏ hàng -->
        <ImageView
            android:id="@+id/cart_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:contentDescription="@string/cart" />
    </LinearLayout>

    <!-- Loại quần áo-->
    <HorizontalScrollView
        android:id="@+id/category_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Áo sơ mi -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:id="@+id/category_shirts"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_25"
                    android:contentDescription="@string/shirts" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shirts"
                    android:paddingLeft="20dp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Váy -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:id="@+id/category_dresses"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_25"
                    android:contentDescription="@string/dresses" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dresses"
                    android:paddingLeft="18dp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Quần -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:id="@+id/category_pants"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_25"
                    android:contentDescription="@string/pants" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pants"
                    android:paddingLeft="20dp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Giày -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:id="@+id/category_shoes"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_25"
                    android:contentDescription="@string/shoes" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shoes"
                    android:paddingLeft="20dp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Phụ kiện -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:onClick="onCategoryClick">

                <ImageView
                    android:id="@+id/category_accessories"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_25"
                    android:contentDescription="@string/accessories" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accessories"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Danh sách sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_scroll"
        android:padding="16dp" />

</RelativeLayout>
