<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/khung"
        android:padding="10dp">

        <!-- Product Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anhSp"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/TenspTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/GiaTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/SoluongTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng:"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Customer Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin khách hàng"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/AnhKhTT"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/TenkhTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên khách hàng:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/MakhTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã khách hàng:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/SdtTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/DiaChiTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ:"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Payment Method -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán qua ví điện tử"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/baseline_album_24" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/GiaTienTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền: $"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="240dp" />

    </LinearLayout>
</LinearLayout>
